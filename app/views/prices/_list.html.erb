<table class="ads-table tablesaw tablesaw-stack" data-tablesaw-mode="stack">
	<thead>
		<th><%= t "views.my_page.list.title" %></th>
		<% if current_view == "favorites" || current_view == "bought_ads" -%>
			<th><%= t "views.my_page.list.seller" %></th>
		<% end -%>
		<th class="text-right"><%= t "views.my_page.list.price" %></th>
		<% if current_view == "sold_ads" -%>
			<th class="text-right"><%= t "views.my_page.list.final_price" %></th>
			<th><%= t "views.my_page.list.buyer" %></th>
		<% end -%>
		<% if current_view == "bought_ads" -%>
			<th class="text-right"><%= t "views.my_page.list.final_price" %></th>
		<% end -%>
		<th><%= t "views.my_page.list.published" %></th>
		<% if current_view == "sold_ads" -%>
			<th><%= t "views.my_page.list.archived" %></th>
		<% end -%>
		<% if current_view != "favorites" && current_view != "bought_ads" -%>
			<th class="text-right"><%= t "views.my_page.list.displayed" %></th>
			<th class="text-right"><%= t "views.my_page.list.displayed_contact_info" %></th>
			<th class="text-right"><%= t "views.my_page.list.favorites" %></th>
		<% end -%>
		<% if current_view == "dar"  || current_view == "mbeya" || current_view == "iringa" -%>
			<th class="is-buttonrow"></th>
		<% end -%>
	</thead>
	<tbody>
	<% prices.each do |price| -%>
		<tr>
			<td>
				<strong>
					<%= Region.find_by_id(price.region_id).name %>
				</strong>
			</td>

			<td> class="text-right"><%= CropType.find_by_id(price.crop_type_id).name %></td>
			
			<td class="text-right"><%= number_to_currency(price.price, precision: 0) %></td>
			
			<td><%= l(price.created_at, format: :short) %></td>

		</tr>
	<% end -%>
	</tbody>
</table>
