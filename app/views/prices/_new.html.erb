<%= form_tag price_path, validate:true do %>

	<%=fields_for prices[0] %>
		<fieldset>
			<div class="field">
				<strong><%= label :crop_type_id, "Potatoes", :class => 'field-label' %></strong>
				<%= hidden_field :crop_type_id, 2 %>
			</div>

			<div class="field">
				<strong><%= label :price, "#{t "views.ad.price"}", :class => 'field-label' %></strong>
				<div class="input-wrapper">
					<div class="input-field">
						<%= number_field :price, :min => 1, :class => "is-inline" %>
					</div>
					<div class="input-label">
						<span class="input-post">/=</span>
					</div>
				</div>
			</div>
			<% if current_view =="dar" %>
				<%= hidden_field :region_id, :value => 2 %>
			<% elsif current_view == "iringa" %>
				<%= hidden_field :region_id, :value => 5 %>
			<% else %>
				<%= hidden_field :region_id, :value => 13 %>
			<% end %>
		</fieldset>
	<% end %>

	<%= f.submit("Publish", :class => "button") %>

 <% end %>
