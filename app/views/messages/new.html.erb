<%= form_tag messages_path, method: :post do %>
	<div class="form-group">
		<strong><%= label_tag 'message[subject]', 'Subject' %></strong>
		<p><%= Ad.find_by_id(params[:adid].to_i).title %></p>

		<%= hidden_field_tag 'message[subject]', current_user.name + " - " + Ad.find_by_id(params[:adid].to_i).title %>

	</div>

	<div class="form-group">
		<strong><%= label_tag 'recipients', 'Sending to:' %></strong>
		<p><%= User.find_by_id(params[:uid].to_i).name %></p>
	</div>

	<div class="form-group">
		<strong><%= label_tag 'message[body]', 'Message:' %></strong>
		<%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control', required: true %>
	</div>

	<%= submit_tag 'Send', name: "uid[#{params[:uid]}]", class: 'button is-primary is-block' %>
<% end %>