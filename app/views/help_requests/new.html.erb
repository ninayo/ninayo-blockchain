<div class="new-help-request">

	<%= form_for @help_request do |f| %>
		<%= f.telephone_field :phone_number %>
		<%= f.text_field :email %>
		<%= f.radio_button(:request_type, "Seller") %>
		<%= f.label(:request_type_seller) %>
		<%= f.radio_button(:request_type, "Buyer") %>
		<%= f.label(:request_type_buyer) %>
		<%= f.text_area :body, placeholder: "Maoni" %><br/>
		<%= f.submit "#{t "common.save"}", :class => "button is-primary is-block" %>
	<% end %>

</div>