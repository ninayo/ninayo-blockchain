<div class="new-help-request">

	<div class="panel-heading">
		<p><strong>Help Request</strong></p>
		<p>Submit Thy Help Request to <strong>NINAYO</strong></p>
	</div>
	<hr>
	<div class="panel-heading">
		<%= form_for HelpRequest.new, :url => help_requests_path do |f| %>
			<strong><%= "What's the problem?" %></strong><br>
	    	<%= f.label "Seller Problem" %>
			<%= f.radio_button :request_type, "seller_help" %><br>
	    	<%= f.label "Buyer Problem" %>
	    	<%= f.radio_button :request_type, "buyer_help" %><br>
	    	<%= f.label "General Help" %>
	    	<%= f.radio_button :request_type, "general_help" %><br>
	    	<%= f.label "Report an Issue" %>
	    	<%= f.radio_button :request_type, "report_problem" %><br><hr>
			<strong><%= f.label "#{t "activerecord.attributes.user.phone_number"}:", class: "field-label" %></strong>
	    	<%= f.telephone_field :phone_number %>
	    	<strong><%= f.label "#{t "activerecord.attributes.user.email"}:", class: "field-label" %></strong>
	    	<%= f.email_field :email, placeholder: "Optional", autofocus: true %><hr>
	    	<strong><%= f.label :body, value: "Body" %></strong>
	    	<%= f.text_area :body, placeholder: "Maoni" %><hr>

	    	<%= f.submit 'Kuwaalika', class: "button is-block" %>
		<% end %>
	</div>
</div>