		<table class="datatable is-admin is-fullwidth">
			<tfoot>
				<tr>
					<th>Total</th>
					<td class="text-right"><%= @users.count %></td>
				</tr>
			</tfoot>
			<tbody>
				<tr>
					<th><%= link_to "Users", admin_analytics_users_path %></th>
