				</tr>
				<tr>
					<th>VIP</th>
					<td class="text-right"><%= @users.vip.count %></td>
				</tr>
				<tr>
					<th>Admin</th>
					<td class="text-right"><%= @users.admin.count %></td>
				</tr>
			</tbody>
		</table>
	</div>
