<div class="usernav">
	<div class="usernav-caret"></div>
	<div class="usernav-inner">
		<%= link_to "#{t "views.navigation.home"}", root_path, :class => "usernav-item mobile-only" %>

		<% if user_signed_in? %>
			<%= link_to "#{t "views.navigation.my_page"}", mypage_path, :class => "usernav-item mobile-only" %>
			<!-- Logged in as <strong><%= current_user.email %></strong>. -->
			<!-- <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> | -->
		<%  end %>

		<hr class="usernav-separator mobile-only">

		<% if I18n.locale == :sw %>
			<%= link_to({locale: "en"}, class: "usernav-item is-secondary") do %>
				<img src="<%= image_path("icons/language.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/language.png") %>'">
				English
			<% end %>
		<% elsif I18n.locale == :en %>
			<%= link_to({locale: "sw"}, class: "usernav-item is-secondary") do %>
				<img src="<%= image_path("icons/language.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/language.png") %>'">
				Swahili
			<% end %>
		<% end %>

		<% if user_signed_in? %>
			<% if current_user.admin? %>
				<%= link_to admin_analytics_path, :class => "usernav-item is-secondary" do %>
					<img src="<%= image_path("icons/tachometer.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/tachometer.png") %>'">
					<%= t "views.navigation.dashboard" %>
				<% end %>
			<% end %>
			<%= link_to edit_user_registration_path, :class => "usernav-item is-secondary" do %>
				<img src="<%= image_path("icons/user.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/user.png") %>'">
				<%= t "views.navigation.edit_profile" %>
			<% end %>
			<%= link_to destroy_user_session_path, method: :delete, :class => "usernav-item is-secondary"  do %>
				<img src="<%= image_path("icons/sign-out.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/sign-out.png") %>'">
				<%= t "views.navigation.log_out" %>
			<% end %>
		<% else %>

			<%= link_to new_user_registration_path, :class => "usernav-item is-secondary"  do %>
				<img src="<%= image_path("icons/user.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/user.png") %>'">
				<%= t "views.navigation.sign_up" %>
			<% end %>

			<%= link_to new_user_session_path, :class => "usernav-item is-secondary"  do %>
				<img src="<%= image_path("icons/sign-in.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null; this.src='<%= image_path("icons/sign-in.png") %>'">
				<%= t "views.navigation.login" %>
			<% end %>

			<%= link_to user_omniauth_authorize_path(:facebook), :class => "usernav-item is-secondary" do%>
				<img src="<%= image_path("icons/facebook.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null;
					this.src='<%= image_path("icons/facebook.png") %>'">
				<%if I18n.locale == :en %>
					Login with Facebook
				<% else %>
					Jisajili na Facebook
				<% end %>
			<% end %>

		<% end %>
	</div>
</div>
