<div class="usernav">
	<div class="usernav-caret"></div>
	<div class="usernav-inner">
		<%= link_to "#{t "views.navigation.home"}", root_path, :class => "usernav-item mobile-only" %>
		<% if user_signed_in? %>
			<%= link_to "#{t "views.navigation.my_page"}", mypage_path, :class => "usernav-item mobile-only" %>
			<!-- Logged in as <strong><%= current_user.email %></strong>. -->
			<!-- <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> | -->
			<span class="usernav-separator"></span>
			<%= link_to "#{t "views.navigation.edit_profile"}", edit_user_registration_path, :class => "usernav-item" %>
			<%= link_to "#{t "views.navigation.log_out"}", destroy_user_session_path, method: :delete, :class => "usernav-item"  %>
		<% else %>
			<span class="usernav-separator"></span>
			<%= link_to "#{t "views.navigation.sign_up"}", new_user_registration_path, :class => "usernav-item"  %>
			<%= link_to "#{t "views.navigation.login"}", new_user_session_path, :class => "usernav-item"  %>
		<% end %>
	</div>
</div>
