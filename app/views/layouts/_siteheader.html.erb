<div class="siteheader">
	<div class="siteheader-inner">
		<a href="<%=root_path%>" class="siteheader-logo">
			<%= image_tag("ninayo-logo.png", alt: "NINAYO") %>
		</a>

		<%= link_to("New ad", new_ad_path, :class => "button siteheader-new-ad") if user_signed_in? %>
		<a href="" class="siteheader-toggle">
			<%= image_tag("hamburger.svg", alt: "Menu") %>
		</a>

		<div class="usernav">
			<div class="usernav-caret"></div>
			<div class="usernav-inner">
				<%= link_to "Home", root_path, :class => "usernav-item" %>
				<% if user_signed_in? %>
					<!-- Logged in as <strong><%= current_user.email %></strong>. -->
					<!-- <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> | -->
					<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "usernav-item"  %>
				<% else %>
					<%= link_to "Sign up", new_user_registration_path, :class => "usernav-item"  %> |
					<%= link_to "Login", new_user_session_path, :class => "usernav-item"  %>
				<% end %>
			</div>
		</div>
	</div>
</div>