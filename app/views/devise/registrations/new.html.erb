<div class="login">
	<div class="login-column">
		<h3><%= t "views.create_account.heading" %></h3>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true } ) do |f| %>
			<%= devise_error_messages! %>
			<p>

			<div class="field">
				<%= f.label (I18n.locale == :sw ? "Namba ya simu au barua pepe" : "Phone number or email"), class: "field-label" %>
 				<%= f.text_field :login, placeholder: "+255123456789" %>
 				<span id="phone_taken" style="color:red; display:none;"><%= t "views.create_account.exists" %> <%= link_to "#{t "common.login_to_continue"}", "#{new_session_path(resource_name)}?user_login=REPLACEUSERLOGIN&forgot=1&locale=#{params['locale']}" %></span>
			</div>

			<div class="field">
				<%= f.label (I18n.locale == :sw ? "Jina" : "Name"), class: "field-label" %>
				<%= f.text_field :name, placeholder: (I18n.locale == :sw ? "Ingie jina" : "Please enter your name") %>
			</div>

			<% if f.object.password_required? %>
				<div class="field">
					<%= f.label :password, class: "field-label" %>
					<%= f.password_field :password, autocomplete: "off", placeholder: (I18n.locale == :sw ? "Chague nenosiri" : "Choose a password") %>
					<% if @validatable %>
					<span class="field-hint"><%= @minimum_password_length %> <%= t "views.create_account.characters_minimum" %></span>
					<% end %>
				</div>

				<div class="field">
					<%= f.label :password_confirmation, class: "field-label" %>
					<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (I18n.locale == :sw ? "Andike nenosiri tena" : "Enter your password again") %>
				</div>
			<% end %>

			<div class="field field-checkbox">
				<%= f.check_box :agreement, checked: true %>
				<label for="user_agreement">
					<%= t "views.create_account.agreement_text_1" %>  <%= link_to "#{t "views.create_account.agreement_text_2"}", terms_path, :target => "_BLANK" %>
				</label>
			</div>
			<br>
			<div class="field-actions">
				<%= f.submit "#{t "views.create_account.sign_up"}", class: "button only-block" %>
			</div>
			<br>
			<h5><%= (I18n.locale == :en ? "Prefer to sign in using Facebook?" : "Je, unapendelea kuingia kwa kutumia Facebook?") %></h5>
		
			<p>
				<%= link_to user_omniauth_authorize_path(:facebook), :class => "button only-block is-facebook" do%>
					<img src="<%= image_path("icons/facebook.svg") %>" class="usernav-icon" alt="" onerror="this.onerror=null;
						this.src='<%= image_path("icons/facebook.png") %>'">
					<%if I18n.locale == :en %>
						Log in with Facebook
					<% else %>
						Jisajili na Facebook
					<% end %>
				<% end %>
			</p>
		<% end %>
	</div>
	<div class="login-column">
		<h3 style="text-align: center;"><%= t "views.create_account.heading_2" %></h3>
		
		<p>
			<%= link_to "#{t "devise.phrases.log_in"}", new_session_path(resource_name), :class => "button only-block" %>
		</p>
	</div>
</div>