<div class="login">
	<div class="login-column">
		<h3><%= t "devise.phrases.log_in" %></h3>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<div class="field">
				<%= f.label (I18n.locale == :sw ? "Namba ya simu au barua pepe" : "Phone number or email address") %>
 				<%= f.text_field :login, placeholder: "+255123456789" %>
			</div>

			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password, placeholder: (I18n.locale == :sw ? "Nenosiri" : "Password"), autocomplete: "off", :validate => true %>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="field">
					<%= f.check_box :remember_me, checked: true %>
					<%= f.label :remember_me %>
				</div>
			<% end %>

			<div class="field-actions">
				<div class="field-actions-column">
					<%= f.submit "#{t "devise.phrases.log_in"}", :class => "button is-block" %>
				</div>
				<div class="field-actions-column text-right">
					<%= link_to "#{t "devise.phrases.forgot_your_password"}", new_password_path('user'), :class => "button is-danger is-block"%>
				</div>

			</div>
		<% end %>


	</div>
	<div class="login-column">
		<h3 style="text-align: center;"><%= t "views.create_account.sidebar.heading" %></h3>
		
		<p>
			<%= link_to "#{t "devise.phrases.sign_up_now"}", new_registration_path(resource_name), class: "button is-block" %>
		</p>

	</div>

</div>
