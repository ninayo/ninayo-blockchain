<div class="login">
		<div class="login-column">
			<h2><%= t "devise.phrases.log_in" %></h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="field">
					<%= f.label :username %>
					<%= f.text_field :username, autofocus: true, :validate => true %>
				</div>

				<div class="field">
					<%= f.label :password %>
					<%= f.password_field :password, autocomplete: "off", :validate => true %>
				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="field">
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me %>
					</div>
				<% end %>

				<div class="actions">
					<%= f.submit "#{t "devise.phrases.log_in"}", :class => "button is-primary is-block" %>
				</div>
			<% end %>
		</div>
	<div class="login-column">
		<h2>Don't have an account?</h2>
		<p>Get access to all kinds of benefits like:</p>
		<ul>
			<li>Benefit 1</li>
			<li>Benefit 2</li>
			<li>Benefit 3</li>
		</ul>

		<p>
			<%= link_to "#{t "devise.phrases.sign_up_now"}", new_registration_path(resource_name), class: "button is-block is-primary" %>
		</p>

	</div>

</div>



