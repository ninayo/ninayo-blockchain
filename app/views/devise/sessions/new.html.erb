<div class="login">
	<div class="login-column">
		<h2><%= t "devise.phrases.log_in" %></h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
				<%= f.label :email %>
				<%= f.email_field :email, autofocus: true, :validate => true %>
			</div>

			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password, autocomplete: "off", :validate => true %>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="field">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me %>
				</div>
			<% end %>

			<div class="field-actions">
				<div class="field-actions-column">
					<%= f.submit "#{t "devise.phrases.log_in"}", :class => "button is-primary is-block" %>
				</div>
				<div class="field-actions-column text-right">
					<%= link_to "#{t "devise.phrases.forgot_your_password"}", new_password_path('user'), :class => "button is-link"%>
				</div>
			</div>
		<% end %>


	</div>
	<div class="login-column">
		<h3><%= t "views.create_account.sidebar.heading" %></h3>
		<p><%= t "views.create_account.sidebar.text" %></p>
		<ul>
			<li><%= t "views.create_account.sidebar.benefit_1" %></li>
			<li><%= t "views.create_account.sidebar.benefit_2" %></li>
			<li><%= t "views.create_account.sidebar.benefit_3" %></li>
			<li><%= t "views.create_account.sidebar.benefit_4" %></li>
		</ul>

		<p>
			<%= link_to "#{t "devise.phrases.sign_up_now"}", new_registration_path(resource_name), class: "button is-block is-primary" %>
		</p>

	</div>

</div>



