<% if model && model.errors.any? -%>
	<div id="error_explanation">
		<h2>
			<%= t("common.errors", :count => model.errors.count) %>
			<%= t("validation.message", name: model.model_name.human) %>
		</h2>

		<ul>
		<% model.errors.full_messages.each do |message| -%>
			<li><%= message %></li>
		<% end -%>
		</ul>
	</div>
<% end -%>